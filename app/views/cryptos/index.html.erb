<h1>Listing Cryptos</h1>

<table class= "table table-striped table-light table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Symbol</th>
      <th>Cost per</th>
      <th>Amount owned</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cryptos.each do |crypto| %>
      <% if crypto.user_id == current_user.id %>
        <tr>
          <td><%= crypto.symbol %></td>
          <td><%= crypto.cost_per %></td>
          <td><%= crypto.amount_owned %></td>
          <td><%= link_to 'Vertoon', crypto %></td>
          <td><%= link_to 'Verander', edit_crypto_path(crypto) %></td>
          <td><%= link_to 'Verwyder', crypto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Crypto', new_crypto_path, class: "btn btn-warning" %>
